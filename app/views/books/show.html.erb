<%= link_to("Back to List", books_path, class: 'back-link') %>

<div class="books show">
  <h2>Show task</h2>

  <div class="actions">
    <%= link_to('Edit', edit_book_path(@book)) %>
    <%= link_to('Delete', delete_book_path(@book)) %>
  </div>

  <table summary="Book detail view">
    <tr>
      <th>Name</th>
      <td><%= @book.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @book.position %></td>
    </tr>
    <tr>
      <th>Completed</th>
      <td><%= @book.read? ? 'Yes' : 'No' %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @book.description %></td>
    </tr>
    <tr>
      <th>Category</th>
      <td>
        <% if @book.genre %>
          <%= @book.genre.name %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @book.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @book.updated_at %></td>
    </tr>
  </table>

</div>